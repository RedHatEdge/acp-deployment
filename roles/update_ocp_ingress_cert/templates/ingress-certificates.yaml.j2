---
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: {{ openshift.cluster_name }}-router-default
  namespace: openshift-ingress
spec:
  dnsNames:
      - apps.{{ openshift.cluster_name }}.{{ openshift.base_domain }}
      - "*.apps.{{ openshift.cluster_name }}.{{ openshift.base_domain }}"
  issuerRef:
    group: cert-manager.io
    kind: ClusterIssuer
    name: zerossl-production
  secretName: router-cert
