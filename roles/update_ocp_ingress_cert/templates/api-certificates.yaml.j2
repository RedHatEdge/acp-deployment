---
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: openshift-api
  namespace: openshift-config
spec:
  dnsNames:
    - api.{{ openshift.cluster_name }}.{{ openshift.base_domain }}
  issuerRef:
    group: cert-manager.io
    kind: ClusterIssuer
    name: zerossl-production
  secretName: openshift-api-cert
